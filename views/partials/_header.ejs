<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
        <!-- In the _header.ejs partial of your app, create a <form> that POSTs to /login. -->
        <% if(user_id){ %>
          <form class="form-inline" method="POST" action="/logout">
            <h5 style="font-weight:400;margin:0 10px 0 0;">Logged In As: <%= user_id.email %> !</h4>
            <button style="color:black;background-color:transparent;border-color: black" type="edit" class="btn btn-primary">Logout</button>
          </form>
          <% } else{ %>
          <form class="form-inline" method="GET" action="/login">
            <button style="color: rgba(255,255,255,.5);background-color:transparent;border:none;" type="edit" class="btn btn-primary">Login</button>
          </form>
          <form class="form-inline" method="GET" action="/register">
            <button style="color: rgba(255,255,255,.5);background-color:transparent;border:none;" type="edit" class="btn btn-primary">Register</button>
          </form>
        <% } %>
  </nav>
</header>